

    <%- include('head') -%>

    <div class="box" id="heading">
    <h1> <%= listTitle %></h1>
    </div>
    <div class="info" >
       <div class="left">
        <p>Welcome to your todo list <span style="font-size: 20px; font-weight: bold;" ><%= Message %></span> !</p>
        <ol>
        <li>Hit the + button to add a new Item.</li>
        <li>Hit the [] checkbox to delete an Item.</li>
    </ol>
       </div>
    <div class="right">
        <form action="/logout" method="post">
            <button type="submit" name="logout" >Logout</button>
        </form>
    </div>
</div>

    <div class="box">
        <% for(let i=0; i<newListItems.length; i++) { %>
        <form class="" action="/delete" method="post">
        <div class="item">
            <input type="checkbox" name="checkbox" value="<%= newListItems[i].id %>" onChange="this.form.submit()">
            <p> <%= newListItems[i].todo %></p>
        </div>
    </form>

  <% } %> 

        <form class="item" action="/list" method="post">
            <input type="text" name="newItem" placeholder="Add New Item" autocomplete="off">
            <button type="submit" name="list" value=<%= listTitle %>>+</button>
        </form>
    </div>
   
    <%- include('footer') -%>
